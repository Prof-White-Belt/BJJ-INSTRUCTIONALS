<%- include("../partials/header") %>

<div class="signup-page">
  <div class="signup-form">
    <h1>Join the BJJ Instructionals Community</h1>
    <p>Get access to top-tier instructionals, post reviews, and track your progress.</p>

    <form method="POST" action="/auth/sign-up">
      <label for="username">Username:</label>
      <input type="text" name="username" required />

      <label for="password">Password:</label>
      <input type="password" name="password" required />

      <button type="submit">Sign Up</button>
    </form>

    <p>Already have an account? <a href="/auth/sign-in">Log In</a></p>
  </div>
</div>

<%- include("../partials/footer") %>
