<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Community Reviews - BJJ Instructionals</title>

    <!-- Link to Global and Page Specific CSS -->
    <link rel="stylesheet" href="/stylesheet/global.css" />
    <link rel="stylesheet" href="/stylesheet/community.css" />
    <link rel="stylesheet" href="/stylesheet/navbar.css" />
  </head>

  <body>
    <!-- Navbar -->
    <%- include("../partials/navbar.ejs") %>

    <div class="glass-header">
      <h1>Community Reviews</h1>
    </div>
    
    <a href="/posts/new" class="write-review-btn">Write a Review</a>

    <!-- Wrapper added here -->
    <div class="post-feed">
      <% posts.forEach(post => { %>
        <div class="post-card">
          <h2><%= post.title %></h2>
          <p><%= post.body %></p>
          <small>By: <%= post.userId.username %> | <%= post.createdAt.toDateString() %></small>

          <% if (user && user._id.toString() === post.userId._id.toString()) { %>
            <div class="post-actions">
              <a href="/posts/<%= post._id %>/edit">Edit</a>

              <form method="POST" action="/posts/<%= post._id %>?_method=DELETE" style="display:inline;">
                <button type="submit">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      <% }) %>
    </div>

    <!-- Footer -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
